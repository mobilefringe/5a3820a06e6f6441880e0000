<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            //add in email from
            var query = window.location.search;
            if(query !== "") {
                
                var search_part = query.split('?')[1];
                var search_tag = search_part.split('=')[1];
                $("#fieldEmail").val(search_tag);
            }
            
            
            $.validate();
            $('#subForm').submit(function (e) {
                data = {"g-recaptcha-response": $('#subForm .g-recaptcha-response').val()}
                $.post("https://cornwall.mallmaverick.com/verify_captcha", data, function(response){
                    if(response.success == false){
                        grecaptcha.reset(widgetId1);
                        alert("Please validate captcha");
                        return false;
                    }
                })
                if ($("#agree_terms").prop("checked") != true){
                    alert("Please agree to the term and conditions.");
                    $("#agree_terms").focus();
                    return false;
                }
                e.preventDefault();
                // add in pixel in here too just for the hell of it
                new Image().src='http://clickserv.basis.net/conv/c26d4c65188608f3';
                $.getJSON(
                    this.action + "?callback=?",
                    $(this).serialize(),
                    function (data) {
                        if (data.Status === 400) {
                            alert("Please try again later.");
                        } else { // 200
                            $('#subForm').trigger('reset');
                            $("#success_subscribe").fadeIn();
                        }
                    });
            });
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>