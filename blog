<script>
    $(document).ready(function(e) {
        init(e);
        loadMallData(renderPostsPageData);
        url = '//cornwall.mallmaverick.com/api/v4/cornwall/social.json'; 
        // '//codecloud.cdn.speedyrails.net/sites/5aa1884a6e6f64062b310000/application/json/1519336448100/social.json';
        // http://cornwallcentre.mallmaverickdevelopment.com/api/v4/cornwall/social.json
        $.getJSON(url).done(function(data){
            mallData = JSON.stringify(data);
            var mallDataJSON = JSON.parse(mallData);
            log('done fetching social data from: ' + url);
            // return mallDataJSON.leasing_units;
            social = mallDataJSON.social;
            var youtube = social.youtube.sortBy(function(o){ return o.created_at_epoch}).reverse();
            var main_video = [youtube[0]];
            var next_two_video = [youtube[1], youtube[2]];
            renderYoutube('#youtube_container_1','#youtube_template_1',main_video);
            renderYoutube('#youtube_container_2','#youtube_template_2', next_two_video);
        });
        
        
    });
</script>