<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            // var repo = getRepoDetailsByName("Contact Us Banner");
            // if (repo != undefined) {
            //     var banner = getImageURL(repo.images[0].photo_url);
            //     $(".inside_banner").css({backgroundImage: "url(" + banner + ")"});
            // }
            
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            job_details = getJobDetailsBySlug(slug);
            
            renderJobDetails('#job_header_container', '#job_header_template', job_details)
            renderJobDetails('#job_details_container', '#job_details_template', job_details)
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>